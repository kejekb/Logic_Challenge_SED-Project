<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8073b9ff"
    tools:context="com.example.kevinbalauro.logicchallenge.Level2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/turns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turns:"
            android:textSize="32dp"/>
    </RelativeLayout>
    <!--Start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/outputWire"
            android:layout_width="15dp"
            android:layout_height="125dp"
            android:background="@android:color/holo_red_dark" />
    </RelativeLayout>
    <!--End-->
    <!--Start of Wire-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstSetoFIC"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout4">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/andGateWireOne"
                android:layout_width="15dp"
                android:layout_height="100dp"
                android:background="@android:color/holo_red_dark" />
            <View
                android:id="@+id/andGateWireTwo"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="@android:color/holo_red_dark"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/orGateWireOne"
                android:layout_width="15dp"
                android:layout_height="100dp"
                android:layout_marginLeft="150dp"
                android:background="@android:color/holo_red_dark" />
            <View
                android:id="@+id/orGateWireTwo"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/holo_red_dark"/>
        </RelativeLayout>
    </RelativeLayout>
    <!--End of Wire-->
    <!--Start of Wire-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/switchOneWireOne"
            android:layout_width="15dp"
            android:layout_height="125dp"
            android:background="@android:color/holo_red_dark" />

        <View
            android:id="@+id/switchTwoWireTwo"
            android:layout_width="15dp"
            android:layout_height="70dp"
            android:layout_marginLeft="64dp"
            android:background="@android:color/holo_red_dark" />
            <View
                android:id="@+id/switchTwoWireTwoA"
                android:layout_width="15dp"
                android:layout_height="70dp"
                android:layout_marginLeft="154dp"
                android:background="@android:color/holo_red_dark"/>
            <View
                android:id="@+id/switchTwoWireTwoB"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="69dp"
                android:background="@android:color/holo_red_dark"/>
        <View
            android:id="@+id/switchTwoWireTwoC"
            android:layout_width="15dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/switchOneWireOne"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_dark"/>
        <View
            android:id="@+id/switchThreeWireOne"
            android:layout_width="15dp"
            android:layout_height="125dp"
            android:layout_marginLeft="208dp"
            android:background="@android:color/holo_red_dark" />
    </RelativeLayout>
    <!--End of Wire-->
    <!--Start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/andGateColor2"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="#FF0000" />

            <ImageView
                android:id="@+id/andGate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/and_gate" />
        </RelativeLayout>
    </RelativeLayout>
    <!--End-->
    <!--Start-->
    <RelativeLayout
        android:id="@+id/firstSetoFIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp">

        <RelativeLayout
            android:id="@+id/IC1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <View
                android:id="@+id/andGateColor1"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="#FF0000" />

            <ImageView
                android:id="@+id/andGate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/and_gate" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/IC2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_toEndOf="@+id/IC1"
            android:layout_toRightOf="@+id/IC1">

            <View
                android:id="@+id/orGateColor1"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="#FF0000" />

            <ImageView
                android:id="@+id/orGate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/or_gate" />
        </RelativeLayout>
    </RelativeLayout>
    <!--END-->
    <!--Start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstSetoFIC"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/firstSetoFIC"
        android:layout_marginBottom="60dp"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_red" />

        <ImageView
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="96dp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_red" />

        <ImageView
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_red" />
    </RelativeLayout>
    <!--End-->
    <!--Start-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp">

        <ImageView
            android:id="@+id/outputLed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/led_red" />
    </RelativeLayout>
    <!--End-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_button" />
    </RelativeLayout>
</RelativeLayout>
